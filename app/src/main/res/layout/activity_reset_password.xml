<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.gfbusinessschool.view.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titlePasswordFormat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px64"
        android:layout_marginTop="@dimen/px152"
        android:layout_marginEnd="@dimen/px64"
        android:text="@string/password_format"
        android:textColor="@color/color_99"
        android:textSize="@dimen/SP12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleBar" />

    <EditText
        android:id="@+id/etNewPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px72"
        android:layout_marginTop="@dimen/px98"
        android:background="@null"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="@string/input_new_password"
        android:inputType="textPassword"
        android:maxLength="18"
        android:paddingStart="@dimen/px66"
        android:paddingEnd="@dimen/px66"
        android:paddingBottom="@dimen/px20"
        android:singleLine="true"
        android:textColor="@color/color_33"
        android:textColorHint="@color/color_99"
        android:textCursorDrawable="@drawable/edittext_cursor_color"
        android:textSize="@dimen/SP12"
        app:layout_constraintTop_toBottomOf="@+id/titlePasswordFormat" />

    <View
        android:id="@+id/line1"
        android:layout_width="0dp"
        android:layout_height="@dimen/px2"
        android:layout_marginStart="@dimen/px40"
        android:layout_marginEnd="@dimen/px40"
        android:background="@color/color_e8"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNewPassword" />

    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px54"
        android:layout_marginTop="@dimen/px44"
        android:background="@null"
        android:ellipsize="end"
        android:gravity="top"
        android:hint="@string/input_confirm_password"
        android:inputType="textPassword"
        android:maxLength="18"
        android:paddingStart="@dimen/px66"
        android:paddingEnd="@dimen/px66"
        android:singleLine="true"
        android:textColor="@color/color_33"
        android:textColorHint="@color/color_99"
        android:textCursorDrawable="@drawable/edittext_cursor_color"
        android:textSize="@dimen/SP12"
        app:layout_constraintTop_toBottomOf="@+id/line1" />

    <View
        android:id="@+id/line2"
        android:layout_width="0dp"
        android:layout_height="@dimen/px2"
        android:layout_marginStart="@dimen/px40"
        android:layout_marginEnd="@dimen/px40"
        android:background="@color/color_e8"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etConfirmPassword" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px86"
        android:layout_marginStart="@dimen/px66"
        android:layout_marginTop="@dimen/px80"
        android:layout_marginEnd="@dimen/px66"
        android:background="@drawable/bianxian42_theme_color"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/SP16"
        app:layout_constraintTop_toBottomOf="@+id/line2" />

</androidx.constraintlayout.widget.ConstraintLayout>
