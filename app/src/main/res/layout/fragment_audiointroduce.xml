<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/px190">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px25"
            android:layout_marginStart="@dimen/left_app"
            android:layout_marginEnd="@dimen/left_app"
            android:text="标题"
            android:textSize="@dimen/SP16"
            android:textColor="@color/color_33"/>

        <TextView
            android:id="@+id/studyCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px14"
            android:layout_marginStart="@dimen/left_app"
            android:text="100人在学"
            android:textSize="@dimen/SP13"
            android:textColor="@color/color_66"/>

        <TextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/left_app"
            android:layout_marginEnd="@dimen/left_app"
            android:layout_marginTop="@dimen/px14"
            android:text="案例详情"
            android:textSize="@dimen/SP16"
            android:textColor="@color/color_33"/>

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px20" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>