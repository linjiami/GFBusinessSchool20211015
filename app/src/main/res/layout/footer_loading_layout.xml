<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/footview_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:gravity="center"
    android:layout_marginTop="@dimen/px30"
    android:minHeight="@dimen/px50"
    android:orientation="horizontal">

    <ProgressBar
        android:id="@+id/footview_progress_bar"
        android:layout_width="@dimen/px56"
        android:layout_height="@dimen/px56"
        android:indeterminate="true" />

    <TextView
        android:id="@+id/footview_loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px10"
        android:singleLine="true"
        android:text="@string/foot_layout_loading"
        android:textColor="@color/black"
        android:textSize="@dimen/SP14" />

</LinearLayout>