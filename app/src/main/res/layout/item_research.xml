<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/left_app"
    android:layout_marginEnd="@dimen/left_app"
    android:background="@drawable/shape12_b2"
    android:id="@+id/researchLayout"
    android:layout_marginTop="@dimen/px24">

    <LinearLayout
        android:id="@+id/researchStateLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/researchState"
            android:layout_width="@dimen/px110"
            android:layout_height="@dimen/px125"
            android:scaleType="centerCrop"
            android:src="@mipmap/research_nostart" />

        <TextView
            android:id="@+id/joinedTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/SP16"
            android:textColor="@color/color_cc9966"
            android:text="@string/joined"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/px17"/>
    </LinearLayout>


    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/researchStateLayout"
        android:layout_marginStart="@dimen/px11"
        android:layout_marginEnd="@dimen/px11"
        android:layout_marginTop="@dimen/px23"
        android:textSize="@dimen/SP14"
        android:textColor="@color/black"
        android:text="关于培训内容调整的问卷调查"
        android:lines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/researchStateLayout"
        android:layout_marginStart="@dimen/px11"
        android:layout_marginEnd="@dimen/px11"
        android:layout_marginTop="@dimen/px30"
        android:textSize="@dimen/SP11"
        android:textColor="@color/color_66"
        android:text="2020-01-01至2020-01-10"
        android:lines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/researchStateLayout"
        android:layout_marginStart="@dimen/px11"
        android:layout_marginEnd="@dimen/px11"
        android:layout_marginTop="@dimen/px30"
        android:paddingBottom="@dimen/px22"
        android:textSize="@dimen/SP11"
        android:textColor="@color/color_66"
        android:text="主要为了调研当前的培训课程大家是否喜欢和有没有更好的  培训课程的需求的意见等。"/>

</androidx.constraintlayout.widget.ConstraintLayout>