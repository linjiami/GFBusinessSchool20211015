<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/left_app"
    android:layout_marginEnd="@dimen/left_app"
    android:layout_marginTop="@dimen/px20"
    android:background="@drawable/shape14_white"
    android:id="@+id/readCollectionLayout"
    android:paddingTop="@dimen/px20"
    android:paddingBottom="@dimen/px20">

    <ImageView
        android:id="@+id/stateIcon"
        android:layout_width="@dimen/px109"
        android:layout_height="@dimen/px123"
        android:src="@mipmap/share_passed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/stateIcon"
        android:layout_marginStart="@dimen/px22"
        android:layout_marginEnd="@dimen/px16"
        android:text="以色列和巴基斯塔关于领土的纷争问题解读"
        android:textSize="@dimen/SP14"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:drawablePadding="@dimen/px19"
        app:drawableStartCompat="@mipmap/video_readcollection"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/stateIcon"
        android:layout_marginStart="@dimen/px22"
        android:layout_marginEnd="@dimen/px16"
        android:layout_marginTop="@dimen/px20"
        android:gravity="center_vertical"
        android:text="2020-05-12"
        android:textSize="@dimen/SP13"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/contentShare"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/stateIcon"
        android:layout_marginStart="@dimen/px22"
        android:layout_marginEnd="@dimen/px16"
        android:layout_marginTop="@dimen/px22"
        android:gravity="center_vertical"
        android:text="介绍"
        android:textSize="@dimen/SP11"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/color_33" />

</androidx.constraintlayout.widget.ConstraintLayout>